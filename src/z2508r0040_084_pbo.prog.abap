MODULE STATUS_0100 OUTPUT.

  LOOP AT GT_DATA INTO GS_DATA.
    IF  GS_DATA-LIGHT = ICON_RED_LIGHT OR GV_CHECK = 'X'.
      SET PF-STATUS 'S0100' EXCLUDING 'BDC'.
      EXIT.
     ELSE.
       SET PF-STATUS 'S0100'.
    ENDIF.
  ENDLOOP.

ENDMODULE.
